<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    style="@style/NormalBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wingjay.jianshi.ui.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_title"
            android:layout_marginTop="@dimen/margin_18"
            android:scrollbars="none">

            <TextView
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name_broken"
                android:textSize="@dimen/huge_text_size" />

        </ScrollView>


        <TextView
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_18"
            android:layout_marginTop="@dimen/margin_18"
            android:gravity="center"
            android:text="@string/logo_slogan"
            android:textSize="@dimen/normal_text_size"
            android:typeface="serif" />

        <com.wingjay.jianshi.ui.widget.TextPointView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:text="@string/write" />

    </LinearLayout>

</FrameLayout>
